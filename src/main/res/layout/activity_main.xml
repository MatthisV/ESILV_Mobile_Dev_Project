<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/request_iban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginTop="200dp"/>

    <Button
        android:textColor="#ffff"
        android:text="Access account"
        android:id="@+id/get_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"/>

    <TextView
        android:text="IBAN : "
        android:id="@+id/show_iban"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_data" />
    <TextView
        android:text="Account : "
        android:id="@+id/show_name"
        android:padding="10dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_iban" />
    <TextView
        android:text="Balance : "
        android:id="@+id/show_balance"
        android:padding="10dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_name" />
    <TextView
        android:text="Currency : "
        android:id="@+id/show_currency"
        android:padding="10dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_balance" />

    <Button
        android:id="@+id/refresh_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh Accounts"
        android:layout_marginTop="80dp"
        android:layout_margin="10dp"
        android:layout_alignLeft="@id/request_iban"
        android:layout_alignRight="@id/request_iban"/>


</RelativeLayout>